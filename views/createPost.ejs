<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v4.0.0/css/line.css"
    />
    <link rel="stylesheet" href="css/createPost.css" />
  </head>
  <body>
    <nav>
      <div class="container">
        <h2 class="logo">Foodogram</h2>
        <div class="search-bar">
          <i class="uil uil-search"></i>
          <input
            type="text"
            placeholder="Search for recipes, ingredients and more"
          />
        </div>
        <div class="create">
          <!-- <label class="btn btn-primary" for="create-post">
                    <span>Create </span>
                    </label> -->
          <div class="profile-picture">
            <img src="./Images/profile.jpg" alt="logo" />
          </div>
        </div>
      </div>
    </nav>
    <!---main-->
    <main>
      <div class="container">
        <!--Leftbox-->
        <div class="left">
          <a href="" class="profile">
            <div class="profile-picture">
              <img src="./Images/profile.jpg" alt="logo" />
            </div>
            <div class="handle">
              <h3>NAME</h3>
              <p class="text-muted">@username</p>
            </div>
          </a>
          <!--sidebar-->
          <div class="sidebar">
            <a href="/home" class="menu-item">
              <span> <i class="uil uil-home"></i></span>
              <h3>Home</h3>
            </a>
            <a href="/home" class="menu-item" id="message-notification">
              <span> <i class="uil uil-message"></i></span>
              <h3>Messages</h3>
            </a>
            <a href="/findmybuddy" class="menu-item">
              <span> <i class="uil uil-users-alt"></i></span>
              <h3>Find My Buddy</h3>
            </a>
            <!-- <label for="create-post" class=" btn btn-primary">Create Post</label> -->
          </div>
        </div>
        <!--right-->
        <div class="right">
          <form>
          <div class="messages">
            <div class="heading">
              <h4>Upload Your Image <label for="file-ip-1"><i class="uil uil-plus" id="plus"></i></label>
                <label for="file-ip-1"><i class="uil uil-edit" id="edit"></i></label></h4>
              <div class="form-input">
                <div class="preview">
                  <img id="file-ip-1-preview">
                </div>
                
                <input type="file" name="image" id="file-ip-1" accept="image/*" onchange="showPreview(event);">
                
              </div>
            </div>
            <div class="message">
              <div class="message-body">
                <div class="action">
                  <p class="image-cap1">Image caption</p>
                  <p class="image-cap-another">Image Another caption</p>
                  <p class="image-cap-crawled">Image caption Crawled</p>
                  <input type="text" class="image-cap2" placeholder="write your own caption">
                  <div class="buttons">
                  <label class="btn btn-primary" onclick="display()" id="generate-caption">
                      Generate Caption
                  </label>
                  <label class="btn btn-primary" onclick="displayAnother()" id="generate-caption-another">
                    Generate Another Caption
                </label>
                <label class="btn btn-primary" onclick="displayCrawled()" id="generate-caption-ig">
                Not Impressed? Use our Caption Crawler 
              </label>
            </div>
                  <label class="btn" id="write-caption" onclick="displayManual()">
                     Write your caption
                  </label>
                 
              </div>
              <div class="submit">
                <button type="submit" value="Post" class="btn btn-submit">Post</button>
                
              </div>
              </div>
            </div>
          </div>
          </form>
        </div>
      </div>
    </main>

    <!-- <script src="./index.js"></script> -->
  </body>
  
  <script type="text/javascript">
  function showPreview(event){
  if(event.target.files.length > 0){
    var src = URL.createObjectURL(event.target.files[0]);
    var preview = document.getElementById("file-ip-1-preview");
    preview.src = src;
    preview.style.display = "block";
    document.getElementById("plus").style.display = "none";
    document.getElementById("edit").style.display = "block";
  }
  
}

function display() {
    document.getElementById("generate-caption").style.display = "none";
    document.getElementById("write-caption").style.display = "block";
    document.getElementsByClassName("image-cap1")[0].style.display = "block";
    document.getElementsByClassName("image-cap2")[0].style.display = "none";
    document.getElementById("generate-caption-another").style.display = "flex";
    document.getElementById("generate-caption-ig").style.display = "flex";
}

function displayManual() {
    document.getElementById("generate-caption").style.display = "none";
    document.getElementById("write-caption").style.display = "none";
    document.getElementsByClassName("image-cap2")[0].style.display = "block";
    document.getElementsByClassName("image-cap1")[0].style.display = "none";
    document.getElementsByClassName("image-cap-another")[0].style.display = "none";
    document.getElementsByClassName("image-cap-crawled")[0].style.display = "none";
    document.getElementById("generate-caption-another").style.display = "none";
    document.getElementById("generate-caption-ig").style.display = "none";
}
function displayAnother() {
    
    document.getElementById("write-caption").style.display = "flex";
    document.getElementsByClassName("image-cap-another")[0].style.display = "block";
    document.getElementsByClassName("image-cap2")[0].style.display = "none";
    document.getElementById("generate-caption-ig").style.display = "flex";
    document.getElementsByClassName("image-cap1")[0].style.display = "none";
    document.getElementsByClassName("image-cap-crawled")[0].style.display = "none";
}

function displayCrawled() {
   
    document.getElementById("write-caption").style.display = "flex";
    document.getElementsByClassName("image-cap-crawled")[0].style.display = "block";
    document.getElementsByClassName("image-cap2")[0].style.display = "none";
    document.getElementById("generate-caption-another").style.display = "flex";
    document.getElementById("generate-caption-ig").style.display = "flex";
    document.getElementsByClassName("image-cap-another")[0].style.display = "none";
}

</script>
</html>
